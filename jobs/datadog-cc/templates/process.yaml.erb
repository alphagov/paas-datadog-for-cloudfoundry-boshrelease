init_config:

instances:
  - name: cc api master
    search_string: ['/var/vcap/packages/cloud_controller_ng/cloud_controller_ng/bin/cloud_controller']
    exact_match: false
<% if p('cc.jobs.local.number_of_workers').to_i > 0 %>
  - name: cc api worker
    search_string: ['cc_api_worker.api']
    exact_match: false
    thresholds:
      critical: [<%= p('cc.jobs.local.number_of_workers') %>, <%= p('cc.jobs.local.number_of_workers') %>]
<% end %>
