<%=
  nats_port = p('nats.port')
  respond_to?(:if_link) && if_link("nats") do |link|
    nats_port = link.p("nats.port")
  end
%>

init_config:

instances:
  - name: NATS server
    host: <%= spec.address %>
    port: <%= nats_port %>
    collect_response_time: true

  - name: NATS cluster
    host: <%= spec.address %>
    port: <%= p('nats.cluster_port') %>
    collect_response_time: true
